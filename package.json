{
  "name": "glow-skin-angular",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration production",
    "build:ssr": "ng build --configuration production && npm run build:server",
    "build:server": "ng run glow-skin-angular:server",
    "build:prerender": "ng build --configuration production ",
    "serve:ssr": "node dist/glow-skin-angular/server/server.mjs",
    "serve:ssr:prod": "set NODE_ENV=production && node dist/glow-skin-angular/server/server.mjs",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "scrape-reviews": "node scripts/scrape-google-reviews.js",
    "verify-seo": "node scripts/verify-seo-files.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.2.0",
    "@angular/common": "^17.2.0",
    "@angular/compiler": "^17.2.0",
    "@angular/core": "^17.2.0",
    "@angular/forms": "^17.2.0",
    "@angular/platform-browser": "^17.2.0",
    "@angular/platform-browser-dynamic": "^17.2.0",
    "@angular/platform-server": "^17.3.12",
    "@angular/router": "^17.2.0",
    "@angular/ssr": "^17.3.17",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.2.0",
    "@angular/cli": "^17.2.0",
    "@angular/compiler-cli": "^17.2.0",
    "@types/jasmine": "~5.1.0",
    "autoprefixer": "^10.4.21",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "puppeteer": "^24.15.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.2.0"
  }
}
